<h3>Create a new tiplist</h3>

<%= form_for :tiplist, :url => tiplists_path, :action => :create do |f| %>
  <p>
    Name: <%= select(:tiplist, :name, [['Book', 'Book'], ['Song', 'Song'], ['CoffeeShop', 'CoffeeShop'], ['CocktailBar', 'CocktailBar'], ['Restaurant', 'Restaurant'], ['Film', 'Film']]) %> 
  </p>
   
<div class="restaurantcoffeecocktail">
    <% for advisable in @tiplist.advisables %>
      <%= fields_for "tiplist[advisable_attributes][]", advisable do |advisable_form| %>
        <p>
          Name: <%= advisable_form.text_field :name %>
          Author: <%= advisable_form.text_field :author %>
          Artist: <%= advisable_form.text_field :artist %>
          Location: <%= advisable_form.text_field :location %>
        </p>
      <% end %>
    <% end %>
    <p><%= submit_tag "Create Tiplist" %></p>
</div>
<% end %>
